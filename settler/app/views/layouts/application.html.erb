<!DOCTYPE html>
<html>
<head>
  <title>Settler</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_player %>
<h2><%= current_player.name %></h2> 
<%= form_tag logout_path %>
<%= submit_tag("Logout") %>
<% end %>
<%= yield %>

</body>
</html>